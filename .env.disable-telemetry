# Desativação Completa da Telemetria do Chatwoot
# Adicione essas variáveis ao seu arquivo .env principal ou ao ambiente de produção

# Desativa completamente a telemetria e métricas
DISABLE_TELEMETRY=true

# Desativa o push notification relay server (impede envio via hub)
ENABLE_PUSH_RELAY_SERVER=false

# Opcional: Desativa o Chatwoot Hub completamente
CHATWOOT_HUB_URL=disabled

# Opcional: Desativa tracking de exceções externas
SENTRY_DSN=

# Opcional: Desativa New Relic APM
NEW_RELIC_LICENSE_KEY=

# Opcional: Desativa analytics token
ANALYTICS_TOKEN=